<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.exploitr.bookway">

    <application
        android:name=".Objects.BookWayApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookWay"
        tools:replace="android:theme,android:allowBackup">
        <activity android:name=".main_ui.HotelList" />
        <activity android:name=".main_ui.LoginActivity" />
        <activity
            android:name=".main_ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main_ui.MainActivity" />
    </application>

</manifest>